<style>
    
    .chart-div {
      width: 100%; /* Adjust to your layout */
      height: 150px; /* Explicitly set height */
    }
    .progress-container {
        width: 100%;
        height: 5px;
        background-color: #e0e0e0;
        border-radius: 10px;
        margin-bottom: 5px;
        position: relative;
        overflow: hidden;
    }

    .progress-bar {
        height: 100%;
        background-color: #4caf50;
        line-height: 5px;
        color: white;
        text-align: center;
        white-space: nowrap;
        transition: width 0.3s ease;
    }
    .beat-green {
        animation: colorPulse 1s infinite;
    }

    @keyframes colorPulse {
        0%, 100% {
            color: black;
        }
        50% {
            color: rgb(20, 248, 39);
        }
    }
</style>
